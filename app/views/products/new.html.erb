<div class="container-fluid">
<div class="col-md-4 col-md-offset-4">
<div class="inner_show">
<h1 class="form_title">Enter a new product below</h1>
</div>
</div>
<div class="col-md-4 col-md-offset-4">
<%= form_tag '/products', method: :post, class: "create-update-form" do %>
<div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
</div>
<div>
  <%= label_tag :price %>
  <%= text_field_tag :price %>
</div>
<div>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
</div>
<div>
  <%= submit_tag "Add Product"%>
</div>
<% end %>
</div>
</div>