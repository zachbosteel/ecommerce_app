<div class ="container-fluid">
  <div class= "col-md-4 col-md-offset-4">
    <h1 class="inner_show form_title">Edit Product Information</h1>
  </div>
  <div class= "col-md-4 col-md-offset-4">
    <%= form_tag "/products/#{@product.id}", method: :patch, class: "create-update-form" do %>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name, @product.name, class: "create-update-text-field" %>
    </div>
    <div>
      <%= label_tag :price %>
      <%= text_field_tag :price, @product.price, class: "create-update-text-field" %>
    </div>
    <div>
      <%= label_tag :image %>
      <%= text_field_tag :image, @product.image, class: "create-update-text-field" %>
    </div>
    <div>
      <%= label_tag :description %>
      <%= text_field_tag :description, @product.description, class: "create-update-text-field" %>
    </div>
    <div>
      <%= submit_tag "Update Product"%>
    </div>
    <% end %>
  </div>
</div>